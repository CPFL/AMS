{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": false
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "no-console": "off",
    "no-extra-parens": "warn",
    "no-redeclare": "warn",
    "no-unused-vars": "warn",
    "no-empty": "warn",
    "prettier/prettier": ["error", { "singleQuote": true }]
  },
  "globals": {
    "THREE": false
  }
}
